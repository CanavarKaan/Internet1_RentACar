@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Yönetim Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            color: #fff;
            padding-top: 20px;
        }

            .sidebar a {
                color: #adb5bd;
                text-decoration: none;
                display: block;
                padding: 10px 20px;
                border-radius: 4px;
            }

                .sidebar a:hover {
                    background-color: #495057;
                    color: #fff;
                }

        .content {
            margin-left: 250px;
            padding: 20px;
        }

        .header {
            position: fixed;
            top: 0;
            left: 250px;
            width: calc(100% - 250px);
            background-color: #343a40;
            color: #fff;
            padding: 10px 20px;
            z-index: 1000;
        }

        footer {
            text-align: center;
            padding: 10px 0;
            background-color: #343a40;
            color: #fff;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="text-center">Yönetim Paneli</h4>
        <hr class="text-light" />
        <a asp-controller="Home" asp-action="Index">Anasayfa</a>
        <a asp-controller="Category" asp-action="Index">Kategoriler</a>
        <a asp-controller="Car" asp-action="Index">Arabalar</a>
        <a asp-controller="Renting" asp-action="Index">Kiralamalar</a>
        <a asp-controller="User" asp-action="Index">Kullanıcılar</a>
        <a asp-controller="Notes" asp-action="Index">Eklenecekler</a>
        <a asp-controller="Chat" asp-action="Index">Canlı sohbet</a>
        <li class="nav-item">
            <a id="manage" class="nav-link btn btn-custom" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </li>
        
    </div>

    <!-- Header -->
    <div class="header">
        <h5>@ViewData["Title"]</h5>
    </div>

    <!-- Content -->
    <div class="content">
        <div class="mt-5">
            @RenderBody()
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>