@{
    Layout = "_AdminLayout";
}

@model List<Renting>

@if (TempData["basarili"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["basarili"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container mt-5" >
    <h2 class="mb-4">Araba Kiralamaları</h2>

    
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Müşteri ID</th>
                <th>Araba</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var renting in Model)
                {
                    <tr>
                        <td>@renting.Id</td>
                        <td>@renting.CustomerName</td>
                        <td>@renting.Car.Brand @renting.Car.Model</td>
                        
                        <td>
                            <a asp-action="Update" asp-controller="Renting" asp-route-id="@renting.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-controller="Renting" asp-route-id="@renting.Id" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Listelenecek araba bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>

    
    <div class="d-flex justify-content-start mt-3">
        <a asp-action="Add" asp-controller="Renting" class="btn btn-success">Yeni Kiralama Kaydı Oluştur</a>
    </div>
</div>