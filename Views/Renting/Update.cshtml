@{
    Layout = "_AdminLayout";
}
@model Renting

<form method="post" enctype="multipart/form-data">

    <div class="row">
       
        <div class="col-10">
            <div class="border p-4 mt-5 rounded shadow">
                <div class="row pb-3">
                    <h2 class="text-primary">Kiralama Güncelle</h2>
                    <hr />
                </div>

               
                <div class="mb-3">
                    <label asp-for="CustomerName" class="form-label fw-bold"></label>
                    <input asp-for="CustomerName" class="form-control" placeholder="Müşteri Seçiniz" />
                </div>


                <div class="mb-3">
                    <label asp-for="CarId" class="form-label fw-bold"></label>
                    <select asp-for="CarId" asp-items="ViewBag.CarList" class="form-select shadow-sm">
                        <option value="">Araba Seçiniz</option>
                    </select>
                </div>

                


                
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">Kaydet</button>
                    <a asp-controller="Renting" asp-action="Index" class="btn btn-secondary px-4">İptal</a>
                </div>
            </div>

        </div>
        <div class="col-2">
            <br />
            <img src="@Model.Car.PhotoUrl" width="100%"
                 style="border-radius:7px; border:1px solid #bbb9b9" />
        </div>



    
</form>