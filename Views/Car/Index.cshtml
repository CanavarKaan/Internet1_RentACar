@model List<Car>

@if (TempData["basarili"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["basarili"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container mt-5" >
    <h2 class="mb-4">Araba Listesi</h2>

    
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Marka</th>
                <th>Model</th>
                <th>Kategori</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Id</td>
                        <td>@car.Brand</td>              
                        <td>@car.Model</td>
                        <td>@car.Category.Name</td>
                        <td>@car.Description</td>
                        <td>@car.Price.ToString("C")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-primary btn-sm">Düzenle</a>
                            <a asp-action="Delete" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-danger btn-sm" >Sil</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center">Listelenecek araba bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>

    
    <div class="d-flex justify-content-start mt-3">
        <a asp-action="Add" asp-controller="Car" class="btn btn-success">Araba Ekle</a>
    </div>
</div>