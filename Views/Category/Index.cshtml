@{
    Layout = "_AdminLayout";
}

@model List<Category>
@if (Model.Count == 0)
{
    <div class="alert alert-danger col-md-4 mb-2">No Car Type Added Yet</div>
}


@if (TempData["basarili"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["basarili"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<h2 class="mb-4">Araba Kategorileri</h2>


<div class="container mt-5">
<table class="table table-striped table-hover table-bordered">
    <thead class="table-dark">
        <tr>
            <td>Id</td>
            <td>Kategori Adı</td>
            <td>İşlemler</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var Category in Model)
        {
            <tr>
                <td>@Category.Id</td>
                <td>@Category.Name</td>
                
                <td>
                    <a asp-action="Update" asp-controller="Category" class="btn btn-primary btn-sm" asp-route-id="@Category.Id">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Category" class="btn btn-danger btn-sm" asp-route-id="@Category.Id">sil</a>
                </td>
            </tr>
        }
        
    </tbody>
</table>
    <div class="d-flex justify-content-start mt-3">
        <a asp-action="Add" asp-controller="Category" class="btn btn-success">Kategori Ekle</a>
    </div>
</div>