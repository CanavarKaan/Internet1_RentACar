@{
    Layout = "_AdminLayout";
}

@model Category

<form method="post">

    <div class="border p-3 mt-5">
        <div class="row pb-3">
            <h2 class="text-primary">Kategori Guncelle</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:200px">Kaydet</button>

        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:250px">
            İptal
        </a>

    </div>

</form>