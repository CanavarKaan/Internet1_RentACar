@model List<Car>

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Arabalarımız</h2>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm">
                        <img src="@car.PhotoUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@car.Brand @car.Model" />
                        <div class="card-body">
                            <h5 class="card-title">@car.Brand @car.Model</h5>
                            <p class="card-text text-muted">@car.Description</p>
                            <h6 class="text-success fw-bold">Fiyat: @car.Price TL</h6>
                            <a asp-controller="Car" asp-action="Details" asp-route-id="@car.Id" class="btn btn-primary btn-sm">Detaylar</a>
                            <a asp-controller="Car" asp-action="Rent" asp-route-id="@car.Id" class="btn btn-success btn-sm">Kirala</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center text-muted">Şu anda listelenecek araba bulunmamaktadır.</p>
            </div>
        }
    </div>
</div>